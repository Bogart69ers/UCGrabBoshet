@{
    ViewBag.Title = "My Orders";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!-- Orders Start -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">My Orders</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-12 mb-5">
            <div class="bg-light p-30">
                <!-- Example Order Start -->
                <div class="order-item mb-4">
                    <div class="d-flex justify-content-between align-items-center bg-lightgray text-dark p-3" style="background-color: lightgray;">
                        <div>
                            <span>Order Number: </span><strong>#12345</strong>
                        </div>
                        <div>
                            <span>Order Date: </span><strong>2023-06-25</strong>
                        </div>
                        <div>
                            <span>Status: </span><strong>Shipped</strong>
                        </div>
                    </div>
                    <div class="p-3" style="background-color: white;">
                        <!-- Example Product Start -->
                        <div class="d-flex align-items-center border-bottom pb-3 mb-3">
                            <img src="~/Assets/Shop/img/Coke.jpg" alt="Product Name" style="width: 100px; height: 100px; object-fit: cover;">
                            <div class="ml-3">
                                <a href="#" class="h6 text-decoration-none text-truncate">Product Name</a>
                                <div class="text-muted">Quantity: 1</div>
                                <div class="text-muted">Price: $99.99</div>
                            </div>
                        </div>
                        <!-- Repeat Example Product End -->

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div></div>
                            <div>
                                <strong>Total: $199.99</strong>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Example Order End -->
                <!-- Repeat Example Order for more orders -->
                <div class="order-item mb-4">
                    <div class="d-flex justify-content-between align-items-center bg-lightgray text-dark p-3" style="background-color: lightgray;">
                        <div>
                            <span>Order Number: </span><strong>#12346</strong>
                        </div>
                        <div>
                            <span>Order Date: </span><strong>2023-06-24</strong>
                        </div>
                        <div>
                            <span>Status: </span><strong>Processing</strong>
                        </div>
                    </div>
                    <div class="p-3" style="background-color: white;">
                        <!-- Example Product Start -->
                        <div class="d-flex align-items-center border-bottom pb-3 mb-3">
                            <img src="~/Assets/Shop/img/Drinks.jpg" alt="Product Name" style="width: 100px; height: 100px; object-fit: cover;">
                            <div class="ml-3">
                                <a href="#" class="h6 text-decoration-none text-truncate">Product Name</a>
                                <div class="text-muted">Quantity: 1</div>
                                <div class="text-muted">Price: $99.99</div>
                            </div>
                        </div>
                        <!-- Example Product End -->

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div></div>
                            <div>
                                <strong>Total: $99.99</strong>
                            </div>
                        </div>
                    </div>
                    <div class="p-3 text-center" style="background-color: #E8E742 ; width: 100%;">
                        <button class="btn btn-link" style="display: block; width: 100%; text-align: center; color: #000;">Cancel Order</button>
                    </div>
                </div>
                <!-- Repeat Example Order End -->
                <!-- No Orders Message Start -->
                <div class="alert alert-info text-left" role="alert">
                    You have no orders.
                </div>
                <!-- No Orders Message End -->
            </div>
        </div>
    </div>
</div>
<!-- Orders End -->
