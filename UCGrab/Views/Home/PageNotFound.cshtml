@{ 
    ViewBag.Title = "PageNotFound";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Not Found</title>
    <style>
        body {
            background-color: #FDD100;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            text-align: center;
            color: #333;
        }

        .container {
            max-width: 100%; /* Makes sure container width is responsive */
        }

        .error-message {
            font-size: 35px;
        }

        .description {
            font-size: 16px;
            margin: 20px 0;
        }

        .buttons {
            margin-top: 20px;
        }

        .button {
            background-color: #333;
            color: #FFDD00;
            padding: 10px 30px;
            text-decoration: none;
            margin: 0 10px;
            border-radius: 5px;
            border: solid 1px #FFDD00;
        }

            .button:hover {
                background-color: #fff;
                border: solid 1px #fff;
            }
        .button2 {
            background-color: transparent;
            color: #000;
            padding: 10px 20px;
            text-decoration: none;
            margin: 0 10px;
            border-radius: 5px;
            border: solid 1px black;
        }

            .button2:hover {
                background-color: #fff;
                border: solid 1px #fff;
            }

        .traffic-cone {
            width: 450px;
            height: 450px;
        }

        .logo {
            height: 100px; /* Adjust this height as needed */
            margin-top: 10px;
        }
    </style>
</head>
<body>
        <div class="container">
            <img src="~/Assets/PageNotFound/225203-P29OZD-286-min.png" alt="Traffic Cone" class="traffic-cone">
            <div class="error-message"><strong>Oops! Page not found</strong></div>
            <div class="description">The requested URL was not found on this server</div>
            <br />
            <br />
            <br />
            <div class="buttons">
                <a href="/Home/Index" class="button">Go Home</a>
                <a href="/Home/Contact" class="button2">Contact Us</a>
            </div>
            <br />
            <br />
            <br />
            <img src="~/Assets/PageNotFound/logo1-removebg-preview.png" class="logo"/>
        </div>
</body>
</html>
